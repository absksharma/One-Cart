<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    tools:context=".ui.SignupActivity">

    <EditText
        android:id="@+id/nameField"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:autofillHints="name"
        android:drawableLeft="@drawable/person_icon"
        android:drawablePadding="15dp"
        android:ems="15"
        android:hint="Name"
        android:includeFontPadding="true"
        android:inputType="text"
        android:maxLength="10"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/emailField"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/emailField"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawableLeft="@drawable/person_icon"
        android:drawablePadding="15dp"
        android:ems="15"
        android:hint="Email"
        android:includeFontPadding="true"
        android:inputType="textEmailAddress"
        android:maxLength="10"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/passworldField"
        app:layout_constraintTop_toBottomOf="@+id/nameField"
        tools:layout_editor_absoluteX="25dp" />

    <EditText
        android:id="@+id/passworldField"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawableLeft="@drawable/person_icon"
        android:drawablePadding="15dp"
        android:ems="15"
        android:hint="Password"
        android:includeFontPadding="true"
        android:inputType="textPassword"
        android:maxLength="10"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/mobileField"
        app:layout_constraintTop_toBottomOf="@+id/emailField"
        tools:layout_editor_absoluteX="25dp" />

    <EditText
        android:id="@+id/mobileField"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawableStart="@drawable/call_icon"
        android:drawablePadding="15dp"
        android:ems="15"
        android:hint="Mobile"
        android:includeFontPadding="true"
        android:inputType="number"
        android:maxLength="10"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/button_signup"
        app:layout_constraintTop_toBottomOf="@+id/passworldField"
        tools:layout_editor_absoluteX="25dp" />

    <Button
        android:id="@+id/button_signup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="216dp"
        android:gravity="center"
        android:text="Create Account"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:text="SIgn up with Google"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/google_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_signup"
        tools:ignore="RtlSymmetry" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="-87dp" />


</androidx.constraintlayout.widget.ConstraintLayout>